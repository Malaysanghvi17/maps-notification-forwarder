<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#F8F9FA"
              android:padding="0dp"
              tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A73E8"
            android:padding="24dp"
            android:elevation="4dp">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maps → Watch"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="8dp"/>

        <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relay Google Maps notifications to your Galaxy Watch"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:alpha="0.9"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❌ Permission Required"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#33FFFFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"/>

    </LinearLayout>

    <!-- Control Section -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:elevation="2dp">

        <Button
                android:id="@+id/btn_toggle_monitoring"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🔓 Enable Notification Access"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#1565C0"
                android:elevation="2dp"/>

    </LinearLayout>

    <!-- Log Section -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 Activity Log"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A73E8"
                android:padding="16dp"
                android:background="#F8F9FF"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

            <TextView
                    android:id="@+id/tv_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Ready to start monitoring...\n\nOnce enabled, notifications from Google Maps will appear here and be relayed to your Galaxy Watch Fit 3."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#424242"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="monospace"/>

        </ScrollView>

    </LinearLayout>

</LinearLayout>